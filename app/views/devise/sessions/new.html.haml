%section.vh-100{:style => "background-color: #9A616D;"}
  .container.py-5.h-100
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col.col-xl-10
        .card{:style => "border-radius: 1rem;"}
          .row.g-0
            .col-md-6.col-lg-5.d-none.d-md-block
              %img.img-fluid{:alt => "login form", :src => "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp", :style => "border-radius: 1rem 0 0 1rem;"}/
            .col-md-6.col-lg-7.d-flex.align-items-center
              .card-body.p-4.p-lg-5.text-black
                = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-8 space-y-6" }, data: { turbo: false }) do |f|
                  .d-flex.align-items-center.mb-3.pb-1
                    %i.fas.fa-cubes.fa-2x.me-3{:style => "color: #ff6219;"}
                    %span.h1.fw-bold.mb-0 Logo
                  %h5.fw-normal.mb-3.pb-3{:style => "letter-spacing: 1px;"} Sign into your account
                  .form-outline.mb-4
                    = f.email_field :email, autofocus: true, autocomplete: "email", required: true, placeholder: "Email", class: "form-control form-control-lg"
                    %label.form-label{:for => "form2Example17"} Email address
                  .form-outline.mb-4
                    = f.password_field :password, autocomplete: "current-password", required: true, placeholder: "Password", class: "form-control form-control-lg"
                    %label.form-label{:for => "form2Example27"} Password
                  .pt-1.mb-4
                    = f.submit "Login", class: "btn btn-dark btn-lg btn-block"
                  %p.mb-5.pb-lg-2{:style => "color: #393f81;"}
                    Don't have an account?
                    = link_to "Register here", new_user_registration_url, style: "color: #393f81;" 
