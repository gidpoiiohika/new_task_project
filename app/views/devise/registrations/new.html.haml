%section.text-center.text-lg-start
  .container.py-4
    .row.g-0.align-items-center
      .col-lg-6.mb-5.mb-lg-0
        .card.cascading-right
          .card-body.p-5.shadow-5.text-center
            %h2.fw-bold.mb-5 Sign up now
            = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8 space-y-6" }, data: { turbo: false }) do |f|
              .row
                .col-md-6.mb-4
                  .form-outline
                    = f.text_field :first_name, autofocus: true, autocomplete: "first_name", required: true, class: "form-control"
                    %label.form-label{:for => "form3Example1"} First name
                .col-md-6.mb-4
                  .form-outline
                    = f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true, class: "form-control"
                    %label.form-label{:for => "form3Example2"} Last name
              .form-outline.mb-4
                = f.email_field :email, autofocus: true, autocomplete: "email", required: true, class: "form-control"
                %label.form-label{:for => "form3Example3"} Email address
              .form-outline.mb-4
                = f.password_field :password, autocomplete: "new-password", required: true, class: "form-control"
                %label.form-label{:for => "form3Example4"} Password
              .form-outline.mb-4
                = f.password_field :password_confirmation, autocomplete: "new-password-confirmation", required: true, class: "form-control"
                %label.form-label{:for => "form3Example4"} Password Confirmation
              %button.btn.btn-primary.btn-block.mb-4{:type => "submit"}
                Sign up
      .col-lg-6.mb-5.mb-lg-0
        %img.w-100.rounded-4.shadow-4{:alt => "", :src => "https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg"}
